<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/registration">

    <fragment
        android:id="@+id/registration"
        android:name="com.example.mobv.fragment.Registration"
        android:label="fragment_registration"
        tools:layout="@layout/fragment_registration" >
        <action
            android:id="@+id/action_registration_to_details"
            app:destination="@id/detail" />
        <action
            android:id="@+id/action_registration_to_registration"
            app:destination="@id/registration" />
    </fragment>

    <fragment
        android:id="@+id/detail"
        android:name="com.example.mobv.fragment.Detail"
        android:label="fragment_details"
        tools:layout="@layout/fragment_detail" >
        <argument
            android:name="pub"
            app:argType="com.example.mobv.model.Pub" />
    </fragment>

</navigation>
